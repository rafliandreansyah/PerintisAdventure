<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@+id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.azhara.perintisadventure.ui.home.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_booked"
        android:name="com.azhara.perintisadventure.ui.home.ui.bookedlist.BookedFragment"
        android:label="@string/booked"
        tools:layout="@layout/fragment_booked" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.azhara.perintisadventure.ui.home.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="editMessage"
            app:argType="string"
            android:defaultValue="null" />
        <argument android:name="changePassMessage"
            app:argType="string"
            android:defaultValue="null" />
        <argument android:name="getDataMessage"
            app:argType="string"
            android:defaultValue="null" />
        <action
            android:id="@+id/action_navigation_profile_to_navigation_user_edit_profile"
            app:destination="@id/navigation_user_edit_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_change_password"
        android:name="com.azhara.perintisadventure.ui.home.ui.profile.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" >
        <action
            android:id="@+id/action_navigation_change_password_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_user_edit_profile"
        android:name="com.azhara.perintisadventure.ui.home.ui.profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_navigation_user_edit_profile_to_navigation_change_password"
            app:destination="@id/navigation_change_password" />
        <action
            android:id="@+id/action_navigation_user_edit_profile_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
