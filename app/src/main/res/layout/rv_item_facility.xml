<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="5dp">

    <ImageView
        android:id="@+id/ic_check2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_check_round"
        android:layout_centerVertical="true"
        android:contentDescription="@string/icon_check" />

    <TextView
        android:id="@+id/tv_item_facility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tiket Pantai Batu Bengkung"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ic_check2" />
</RelativeLayout>