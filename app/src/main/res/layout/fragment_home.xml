<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?android:attr/actionBarSize"
    tools:context=".ui.home.ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/card"
                android:visibility="gone"
                android:layout_marginHorizontal="16dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp">

                    <com.github.florent37.shapeofview.shapes.CircleView
                        android:id="@+id/img_container"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="4dp">

                        <ImageView
                            android:id="@+id/img_profile_home"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/profile_picture_default"
                            android:scaleType="centerCrop" />

                    </com.github.florent37.shapeofview.shapes.CircleView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img_container"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tv_text_name_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Hai Rafli Andreansyah!"
                            android:textSize="14sp"
                            style="@style/TextPrimaryBold"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/siapkah_kamu_mengawali_petualanganmu"
                            android:textSize="12sp"
                            style="@style/TextPrimary"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/home_shimmer_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include layout="@layout/home_profile_shimmer" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layanan_kami"
                    style="@style/TextPrimaryBold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_service"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_booking_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginVertical="20dp"
                            style="@style/card">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="8dp"
                                android:paddingTop="18dp"
                                android:paddingBottom="14dp">

                                <ImageView
                                    android:id="@+id/ilustration_rent_car"
                                    android:layout_width="95dp"
                                    android:layout_height="67dp"
                                    android:src="@drawable/ilustration_car_booking"
                                    android:contentDescription="@string/ilustrasi_booking_mobil" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="@string/sewa_mobil"
                                    android:layout_below="@id/ilustration_rent_car"
                                    android:layout_marginTop="14dp"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_booking_tour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginVertical="20dp"
                            style="@style/card">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="8dp"
                                android:paddingTop="18dp"
                                android:paddingBottom="14dp">

                                <ImageView
                                    android:id="@+id/ilustration_tour"
                                    android:layout_width="95dp"
                                    android:layout_height="67dp"
                                    android:src="@drawable/ilustation_tour"
                                    android:contentDescription="@string/ilustrasi_booking_tour" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="@string/tour_wisata"
                                    android:layout_below="@id/ilustration_tour"
                                    android:layout_marginTop="14dp"
                                    android:textSize="12sp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/information_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:id="@+id/tv_infromation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextPrimaryBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/perintis_news"
                            android:textSize="18sp" />

                        <TextView
                            style="@style/TextPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Hai trippers, lihat informasi spesial buatmu!"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_item1"
                                android:layout_width="160dp"
                                android:layout_height="130dp"
                                style="@style/card">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/img_bromo"
                                    android:scaleType="centerCrop"/>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/text1"
                                style="@style/TextPrimary"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/card_item1"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:text="Barang-barang yang kamu butuhkan untuk ke bromo"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_date1"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:text="20 januari 2020"
                                android:layout_below="@+id/text1"
                                android:layout_marginTop="8dp"
                                style="@style/TextPrimary"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextSecondary"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_item2"
                                android:layout_width="160dp"
                                android:layout_height="130dp"
                                style="@style/card">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/img_bromo"
                                    android:scaleType="centerCrop"/>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/text2"
                                style="@style/TextPrimary"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/card_item2"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:text="5 Keindahan gunung bromo "
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_date2"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:text="20 januari 2020"
                                android:layout_below="@+id/text2"
                                android:layout_marginTop="8dp"
                                style="@style/TextPrimary"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextSecondary"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_item3"
                                android:layout_width="160dp"
                                android:layout_height="130dp"
                                style="@style/card">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/img_bromo"
                                    android:scaleType="centerCrop"/>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/text3"
                                style="@style/TextPrimary"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/card_item3"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:text="Barang-barang yang kamu butuhkan untuk ke bromo"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_date3"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:text="20 januari 2020"
                                android:layout_below="@+id/text3"
                                android:layout_marginTop="8dp"
                                style="@style/TextPrimary"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextSecondary"/>


                        </RelativeLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>