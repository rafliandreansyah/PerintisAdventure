<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.bookingtour.DetailTourBookingFragment">

    <ScrollView
        android:id="@+id/layout_detail_booking_tour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:elevation="4dp"
                android:layout_marginHorizontal="20dp"
                app:shape_roundRect_bottomLeftRadius="15dp"
                app:shape_roundRect_bottomRightRadius="15dp"
                app:shape_roundRect_topLeftRadius="15dp"
                app:shape_roundRect_topRightRadius="15dp">

                <ImageView
                    android:id="@+id/img_bg_detail_booking_tour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@color/colorGrey"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image_detail_booking_tour" />

            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <TextView
                android:id="@+id/tv_date_detail_booking_tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextPrimary"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                tools:text="20 Desember 2012" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_tour_name_detail_booking_tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextPrimary"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                tools:text="Gunung Bromo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_maps_and_flags"
                    android:contentDescription="@string/icon_maps" />

                <TextView
                    android:id="@+id/tv_location_detail_booking_tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextPrimary"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    tools:text="Malang, Jawa Timur" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:weightSum="3"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.github.florent37.shapeofview.shapes.CircleView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="11dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="9dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:contentDescription="@string/icon_clock"
                                android:src="@drawable/ic_clock" />

                        </RelativeLayout>

                    </com.github.florent37.shapeofview.shapes.CircleView>

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/durasi"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        style="@style/TextPrimary" />

                    <TextView
                        android:id="@+id/tv_duration_detail_booking_tour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="8 jam"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        style="@style/TextPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.github.florent37.shapeofview.shapes.CircleView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_group_color"
                                android:layout_gravity="center"
                                android:contentDescription="@string/icon_group" />
                        </RelativeLayout>

                    </com.github.florent37.shapeofview.shapes.CircleView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kapasitas"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        style="@style/TextPrimary" />

                    <TextView
                        android:id="@+id/tv_capacity_detail_booking_tour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6 Orang"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        style="@style/TextPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.github.florent37.shapeofview.shapes.CircleView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="4dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_car"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/icon_car" />

                        </RelativeLayout>

                    </com.github.florent37.shapeofview.shapes.CircleView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kendaraan"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        style="@style/TextPrimary" />

                    <TextView
                        android:id="@+id/tv_vehicle_detail_booking_tour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Avanza/Wuling"
                        android:maxLines="2"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        style="@style/TextPrimary" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginVertical="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disediakan_oleh"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="4dp"
                style="@style/TextPrimary" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/ic_garage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_garage"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/icon_garage" />

                <TextView
                    android:id="@+id/tv_travel_name_detail_booking_tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextPrimary"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_garage"
                    android:text="@string/perintis_adventure_rent_car_amp_tour_bromo" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waktu_wisata"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                style="@style/TextPrimary" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/ic_clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_clock"
                    android:contentDescription="@string/icon_garage" />

                <TextView
                    android:id="@+id/tv_time_detail_booking_tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextPrimary"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_clock"
                    android:text="07.00 - 17-00" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wisata_yang_dikunjungi"
                android:textSize="16sp"
                style="@style/TextPrimary"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_visited_tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                tools:listitem="@layout/rv_item_visited_tour" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fasilitas"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                style="@style/TextPrimary"
                android:layout_marginTop="25dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_facility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                tools:listitem="@layout/rv_item_facility" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/card"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lokasi_pengambilan"
                        android:textSize="16sp"
                        style="@style/TextPrimary"
                        android:textAlignment="center" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/background_border_card">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextPrimary"
                                android:textSize="14sp"
                                android:layout_marginStart="20dp"
                                android:text="@string/wilayah_kota_malang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gratis"
                                style="@style/TextPrimary"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/colorAccentDark"
                                android:textSize="12sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginVertical="16dp">

                                <TextView
                                    android:id="@+id/tv_pickup_detail_booking_tour"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/detail_penjemputan"
                                    style="@style/TextPrimary"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginBottom="8dp" />

                                <EditText
                                    android:id="@+id/edt_pickup_detail_tour"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/detail_penjemputan..."
                                    android:gravity="top|start"
                                    style="@style/TextAreaStyle"
                                    android:inputType="text|textMultiLine"
                                    android:paddingVertical="8dp"
                                    android:paddingHorizontal="16dp"
                                    android:drawablePadding="8dp"
                                    android:lines="6"
                                    android:overScrollMode="always"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:scrollHorizontally="false"
                                    android:layout_below="@+id/tv_pickup_detail_booking_tour"
                                    android:importantForAutofill="no" />
                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                style="@style/card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/harga_total"
                        style="@style/TextPrimaryBold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginVertical="16dp">

                        <TextView
                            android:id="@+id/tv_total_price_detail_booking_tour"
                            style="@style/TextPrimaryBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOrange"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_booking_tour_now"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ButtonPrimary"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="57dp"
                        android:text="@string/pesan_sekarang" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_detail_booking_tour"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent">

        <include layout="@layout/detail_booking_tour_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:id="@+id/loading_background_booking_tour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@drawable/background_loading" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_booking_tour"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />

</FrameLayout>