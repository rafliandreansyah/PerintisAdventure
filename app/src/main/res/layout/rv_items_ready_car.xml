<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        style="@style/card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/img_car_item"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:src="@drawable/honda_brio"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:id="@+id/tv_car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextPrimary"
                    android:text="Honda Brio"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tv_car_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextSecondary"
                    android:text="2018"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <ImageView
                            android:id="@+id/img_capacity"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_group"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textSize="12sp"
                            style="@style/TextPrimary"
                            android:layout_toEndOf="@id/img_capacity"
                            android:layout_marginStart="8dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="40dp">
                        <ImageView
                            android:id="@+id/img_luggage"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_luggage"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/tv_luggage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="12sp"
                            style="@style/TextPrimary"
                            android:layout_toEndOf="@id/img_luggage"
                            android:layout_marginStart="8dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:id="@+id/img_coupling"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_steering_wheel"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_gear_ready_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic"
                        android:textSize="12sp"
                        style="@style/TextPrimary"
                        android:layout_toEndOf="@id/img_coupling"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_price_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextSecondaryBold"
                    android:text="Rp 280000 / hari"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>