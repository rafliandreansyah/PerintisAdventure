<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:id="@+id/img_detail_booked_car"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/colorGrey" />

    <View
        android:id="@+id/tv_detail_car_name"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <View
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:background="@color/colorGrey"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/tv_detail_booking_date"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorText"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp">

        <View
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@color/colorGrey" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/ic_garage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_garage"
                android:contentDescription="@string/icon_garage" />

            <View
                android:id="@+id/tv_detail_travel_name"
                android:layout_width="250dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ic_garage"
                android:background="@color/colorGrey"/>
        </RelativeLayout>

        <View
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@color/colorGrey"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_group"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/icon_capacity"
                    android:src="@drawable/ic_group_color" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_group"
                    android:background="@color/colorGrey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp">

                <ImageView
                    android:id="@+id/ic_gear"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_steering_wheel"
                    android:contentDescription="@string/icon_gear" />

                <View
                    android:id="@+id/tv_detail_gear_car"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_gear"
                    android:background="@color/colorGrey" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_luggage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_luggage"
                    android:contentDescription="@string/icon_luggage" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_luggage"
                    android:background="@color/colorGrey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp">

                <ImageView
                    android:id="@+id/ic_driver"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_driver"
                    android:contentDescription="@string/icon_driver" />

                <View
                    android:id="@+id/tv_detail_driver"
                    android:layout_width="80dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_driver"
                    android:background="@color/colorGrey"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ic_car"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_car"
                    android:contentDescription="@string/icon_car_year" />

                <View
                    android:id="@+id/tv_detail_car_year"
                    android:layout_width="30dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_car"
                    android:background="@color/colorGrey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ic_car_number"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_car_plate"
                    android:contentDescription="@string/car_plate" />

                <View
                    android:id="@+id/tv_detail_car_plate"
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ic_car_number"
                    android:background="@color/colorGrey" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorText"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp" />

    <View
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@color/colorGrey"
        android:layout_marginHorizontal="16dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/search_map_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_maps_and_flags"
            android:contentDescription="@string/icon_maps" />

        <View
            android:id="@+id/tv_detail_pickup_location"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/search_map_icon"
            android:background="@color/colorGrey"/>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:id="@+id/tv_status_payment_detail_booking"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorGrey" />

            <View
                android:id="@+id/tv_detail_total_price"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginVertical="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorGrey"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>