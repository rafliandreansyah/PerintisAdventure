<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNav" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccentDark</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/border_edt_text</item>
        <item name="android:fontFamily">@font/pt_sans_regular1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextAreaStyle">
        <item name="android:background">@drawable/border_text_area</item>
        <item name="android:fontFamily">@font/pt_sans_regular1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="EditTextDisabledStyle">
        <item name="android:background">@drawable/background_disabled_edt_text</item>
        <item name="android:fontFamily">@font/pt_sans_regular1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:fontFamily">@font/pt_sans_regular1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonRed">
        <item name="android:background">@drawable/background_button_red</item>
        <item name="android:fontFamily">@font/pt_sans_regular1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextPrimary">
        <item name="android:fontFamily">@font/pt_sans_regular1</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextSecondary">
        <item name="android:fontFamily">@font/pt_sans_regular1</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextPrimaryBold">
        <item name="android:fontFamily">@font/pt_sans_bold1</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextSecondaryBold">
        <item name="android:fontFamily">@font/pt_sans_bold1</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="card">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="card2">
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="card3">
        <item name="cardElevation">15dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Customize SheetSelection theme -->

</resources>
